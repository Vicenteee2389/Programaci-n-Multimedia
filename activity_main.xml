<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Cuenta de Bar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- EditText para total de la cuenta -->
        <EditText
            android:id="@+id/etTotalCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese total de la cuenta"
            android:inputType="numberDecimal"
            android:padding="10dp"/>

        <!-- CheckBox para propina -->
        <CheckBox
            android:id="@+id/cbPropina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incluir propina"
            android:paddingTop="16dp"/>

        <!-- SeekBar para porcentaje de propina -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porcentaje de propina"
            android:paddingTop="8dp"/>
        <SeekBar
            android:id="@+id/sbPropina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10"/>

        <!-- RadioGroup para método de pago -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método de pago"
            android:paddingTop="16dp"/>
        <RadioGroup
            android:id="@+id/rgPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efectivo"/>
            <RadioButton
                android:id="@+id/rbTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta"/>
        </RadioGroup>

        <!-- RatingBar para calificación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificación del servicio"
            android:paddingTop="16dp"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="3"/>

        <!-- Botón calcular -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Total"
            android:layout_marginTop="24dp"/>

        <!-- TextView para mostrar resultado -->
        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingTop="24dp"
            android:textSize="16sp"
            android:textColor="#000000"/>
    </LinearLayout>
</ScrollView>
